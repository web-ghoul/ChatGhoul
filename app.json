{
  "expo": {
    "name": "chat-firebase",
    "slug": "chat-firebase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.gif",
    "userInterfaceStyle": "light",
    "scheme": "chat-firebase",
    "splash": {
      "image": "./assets/images/logo.gif",
      "resizeMode": "cover",
      "backgroundColor": "#162832"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow the app to access your camera",
        "NSMicrophoneUsageDescription": "Allow the app to access your microphone"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.gif",
        "backgroundColor": "#162832"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "chatghoul.com"
    },
    "web": {
      "favicon": "./assets/images/logo.gif"
    },
    "plugins": ["expo-router", "expo-font", "expo-camera", "expo-secure-store"]
  }
}
